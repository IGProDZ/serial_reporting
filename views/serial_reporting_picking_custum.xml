                    <table class="table table-condensed" t-if="o.pack_operation_ids">
                        <thead>
                            <tr>
                                <th>
                                    <strong>N°:
                                    </strong>
                                </th>
                                <th>
                                    <strong>Numéro de serie</strong>
                                </th>
                                <th>
